<h1>Captures#index</h1>
<%= stylesheet_link_tag 'captures', media: 'all', 'data-turbolinks-track': 'reload' %>
<form action="/" method="GET">
	<div class="form-grouup" style="width: 70%;">
		<select class="form-control">
			<option value="">all</option>
			<% @servers.each do |s| %>
				<option value="<%= s.name %>"><%= s.name %></option>
			<% end %>
		</select>
		query: <input name="query" type="text" value="" class="form-controll"/>
		<input type="submit" value="search" class="btn btn-primary" />
	</div>

	<%= paginate @caps %>

	<table class="table table-striped table-bordered table-hover" style="width:70%;">
		<thead class="thead-dark">
			<tr>
				<th scope="col">created_at</th>
				<th scope="col">server</th>
				<th scope="col">package</th>
				<th scope="col">version</th>
				<th scope="col">arch</th>
				<th scope="col">type</th>
			</tr>
		</thead>
		<tbody>
			<% @caps.each do |cap| %>
				<tr>
					<td>
						<%= cap.c_at %>
					</td>
					<td>
						<%= cap.sname %>
					</td>
					<td>
						<%= cap.pname %>
					</td>
					<td>
						<%= cap.ver %>
					</td>
					<td>
						<%= cap.arch %>
					</td>
					<td>
						<%= cap.ptype %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<%= paginate @caps %>

</form>

