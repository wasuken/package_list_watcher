<h1>ServerPackages#index</h1>

<% p @params %>

<form action="/" method="GET">
	<div class="form-grouup" style="width: 70%;">
		<select class="form-control">
			<option value="">all</option>
			<% @servers.each do |s| %>
				<option value="<%= s.name %>"><%= s.name %></option>
			<% end %>
		</select>
		query: <input name="query" type="text" value="" class="form-controll"/>
		<input type="submit" value="search" class="btn btn-primary" />
	</div>

	<%= paginate @srv_pack_grps %>

	<table class="table table-striped table-bordered table-hover" style="width:70%;">
		<thead class="thead-dark">
			<tr>
				<th scope="col">server</th>
				<th scope="col">package</th>
				<th scope="col">version</th>
				<th scope="col">arch</th>
				<th scope="col">type</th>
			</tr>
		</thead>
		<tbody>
			<% @srv_pack_grps.each do |grp| %>
				<tr>
					<td>
						<%= grp.sname %>
					</td>
					<td>
						<%= grp.pname %>
					</td>
					<td>
						<%= grp.version %>
					</td>
					<td>
						<%= grp.arch %>
					</td>
					<td>
						<%= grp.pac_type %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<%= paginate @srv_pack_grps %>

</form>
